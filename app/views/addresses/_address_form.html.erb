<div class="row">
  <div class="col-md-6 col-md-offset-3">


    <%= form_for(@address, url: checkout_address_path) do |f| %>

      <h3>Datos de despacho</h3>

      <h3><%= f.label :street, "Calle" %></h3>
      <%= f.text_field :street, class: "form-control"  %>

      <h3><%= f.label :number, "Número" %></h3>
      <%= f.text_field :number, class: "form-control"  %>

      <h3><%= f.label :commune, "Comuna" %></h3>
      <%= f.text_field :commune, class: "form-control"  %>

      <h3><%= f.label :first_name, "Nombre" %></h3>
      <%= f.text_field :first_name, class: "form-control"  %>

      <h3><%= f.label :last_name, "Apellido" %></h3>
      <%= f.text_field :last_name, class: "form-control"  %>

      <h3><%= f.label :email, "Correo electrónico" %></h3>
      <%= f.email_field :email, class: "form-control" %>

      <h3><%= f.label :phone_number, "Teléfono de contacto" %></h3>
      <%= f.number_field :phone_number, class: "form-control" %>
      <br>

      <%= f.submit "Siguiente", class: "btn btn-primary form-control" %>
    <% end %>
  </div>
</div>
